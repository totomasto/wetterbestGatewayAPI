doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='Responsive Admin Dashboard Template')
    meta(name='keywords', content='admin,dashboard')
    meta(name='author', content='stacks')
    // The above 6 meta tags *must* come first in the head; any other head content must come *after* these tags
    // Title
    title Wetterbest Leads
    // Styles
    link(href='https://fonts.googleapis.com/css?family=Ubuntu', rel='stylesheet')
    link(href='/plugins/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    link(href='/plugins/font-awesome/css/font-awesome.min.css', rel='stylesheet')
    link(href='/plugins/icomoon/style.css', rel='stylesheet')
    link(href='/plugins/uniform/css/default.css', rel='stylesheet')
    link(href='/plugins/switchery/switchery.min.css', rel='stylesheet')
    link(href='/plugins/datatables/css/jquery.datatables.min.css', rel='stylesheet', type='text/css')
    link(href='/plugins/datatables/css/jquery.datatables_themeroller.css', rel='stylesheet', type='text/css')
    link(href='/plugins/bootstrap-datepicker/css/datepicker3.css', rel='stylesheet', type='text/css')
    // Theme Styles
    link(href='/css/space.css', rel='stylesheet')
    link(href='/css/custom.css', rel='stylesheet')
    // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js')
      script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
  body
    // Page Container
    .page-container
      // Page Content
      .page-content
        
              // Page Inner
              .page-inner
                #main-wrapper
                  .panel-body
                    table#connections.table
                      tbody
                  #tablesRow.row
                    .col-md-4
                      img(src="https://www.wetterbest.ro/wp-content/themes/wtb-child/img/logo.png")
                      hr
                      h1.error-page-logo #{lead.name}
                      input(type="hidden" id="leadID" value='#{lead.id}')
                      h2#leadID #{lead.id}
                      h3 Email : #{lead.email}
                      h3 Telefon : #{lead.phone}
                      h3 Judet : #{lead.region}
                      h3 Oras : #{lead.city}
                      h3 Tip : #{lead.tip}
                      h5 Observatii : #{lead.obs}
                      a.btn.btn-primary.m-b-xxs(href='#') Trimite catre Wetterbest pentru gestionare
                      
                    .col-md-8
                      .panel.panel-white
                        .panel-heading.clearfix
                          h4.panel-title Distribuitori lead-uri
                        .panel-body
                          .table-responsive
                            table#clientsTable.display.table.compact.nowrap(style='width: 100%; cellspacing: 0;')
                              thead
                                tr(style='font-size:12px;')
                                  th Actiuni
                                  th Distribuitor
                                  th Judet 
                                  th Locatie
                              tfoot
                                tr(style='font-size:12px;')
                                  th Actiuni
                                  th Distribuitor
                                  th Judet 
                                  th Locatie
                              tbody(style='font-size:12px;')
                  // Row
                  // Main Wrapper
                
    // /Page Content
    // /Page Container
    // Javascripts
    script(src='/plugins/jquery/jquery-3.1.0.min.js')
    script(src='/plugins/bootstrap/js/bootstrap.min.js')
    script(src='/plugins/jquery-slimscroll/jquery.slimscroll.min.js')
    script(src='/plugins/uniform/js/jquery.uniform.standalone.js')
    script(src='/plugins/switchery/switchery.min.js')
    script(src='/plugins/datatables/js/jquery.datatables.min.js')
    script(src='/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js')
    script(src='/js/space.min.js')
    // <script src="/js/pages/table-data.js"></script>
    script(src='https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js')
    script(src='https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js')
    script(src='https://cdn.jsdelivr.net/npm/typed.js@2.0.9')
    // App
    script let leadID = #{JSON.stringify(lead.id)};
    script(src='/js/src/util.js')
    script(src='/js/src/app.js')
    script(src='/js/src/init.js')
    

